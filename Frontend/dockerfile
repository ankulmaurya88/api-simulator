FROM node:20-slim

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the code
COPY . .

# Expose Vite's default port
EXPOSE 5173

# Start Vite with --host to allow external access from Docker
CMD ["npm", "run", "preview", "--", "--host", "--port", "5173"]

